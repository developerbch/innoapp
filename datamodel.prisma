type User {
  id: ID! @id
  userName: String! @unique
  email: String! @unique
  firstName: String @default(value: "")
  lastName: String
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
}

type Post {
  id: ID! @id
  location: String!
  caption: String!
  user: User!
  files: [File!]!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like{
  id: ID! @id
  user: User!
  post: Post!
}

type Comment{
  id: ID! @id
  text: String!
  user: User!
  post: Post!
}

type File {
  id: ID! @id
  url: String!
  post: Post!
}